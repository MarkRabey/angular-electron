{
  "name": "angular-electron",
  "version": "0.0.0",
  "license": "SEE LICENSE",
  "main": "./dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "start:production": "NODE_ENV=production electron .",
    "start:main": "npm run build:main && electron .",
    "start:renderer": "ng serve",
    "prestart": "npm run clean",
    "start": "concurrently \"npm run start:renderer\" \"wait-on http-get://localhost:4200 && npm run start:main\"",
    "electron": "electron .",
    "clean": "rm -rf dist",
    "build:main": "tsc -p ./src/main/tsconfig.main.json",
    "build:renderer": "ng build --prod",
    "prebuild": "npm run clean",
    "build": "npm run build:renderer && npm run build:main",
    "precommit": "lint-staged",
    "test": "ng test",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "e2e": "ng e2e",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "build": {
    "productName": "ProductName",
    "appId": "org.your.productname",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:MarkRabey/angular-electron.git"
  },
  "author": {
    "name": "Mark Rabey",
    "email": "mark@markrabey.com"
  },
  "bugs": {
    "url": "https://github.com/MarkRabey/angular-electron/issues"
  },
  "homepage": "https://github.com/MarkRabey/angular-electron",
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "core-js": "^2.5.6",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.3",
    "@angular/cli": "^6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/jasmine": "^2.8.7",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^10.1.0",
    "codelyzer": "^4.3.0",
    "concurrently": "^3.5.1",
    "electron": "^2.0.1",
    "electron-builder": "^20.13.4",
    "husky": "^0.14.3",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.0",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.1.0",
    "lint-staged": "^7.1.0",
    "protractor": "^5.3.2",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "2.7.2",
    "wait-on": "^2.1.0"
  }
}
